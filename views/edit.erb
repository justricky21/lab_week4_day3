<p>Student Edit Form:</p>
<form class="" action="/students/<%=@student.id%>" method="post">
  <label for="first-name">First Name:</label>
  <input id="first-name" type="text" name="first_name"
  value = "<%=@student.first_name%>" />
  <br/>
  <label for="last-name">Last Name:</label>
  <input id="last-name" type="text" name="last_name"
  value = "<%=@student.last_name%>"/>
  <br/>

  <label for="age">Age:</label>
  <input id="age" type="text" name="age"
  value = "<%=@student.age%>"/>
  <br/>

  <label for="house_select">Select House:</label>
  <select name="house_id" id="house_select">
    <% for house in @houses %>
    <option value="<%=house.id%>"<%= 'selected' if @student.house.name ==
      house.name%> > <%=house.name%> </option>
      <%end%>
  </select>

  <input type="submit" value="Confirm changes"/>
</form>
